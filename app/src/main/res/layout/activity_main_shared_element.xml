<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sharedelement.MainSharedElementActivity">

    <ImageView
        android:id="@+id/iv_avatar_1"
        android:layout_width="114dp"
        android:layout_height="114dp"
        android:layout_marginTop="16dp"
        android:transitionName="photo"
        app:layout_constraintEnd_toStartOf="@+id/iv_avatar_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/iv_avatar_2"
        android:layout_width="114dp"
        android:layout_height="114dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar_1"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar_1"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/iv_avatar_3"
        android:layout_width="114dp"
        android:layout_height="114dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_avatar_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar_4"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/iv_avatar_4"
        android:layout_width="114dp"
        android:layout_height="114dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar_3"
        app:layout_constraintTop_toBottomOf="@+id/iv_avatar_2"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_descrption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Lorem Ipsum"
        android:textSize="16sp"
        android:transitionName="text"
        app:layout_constraintEnd_toEndOf="@+id/iv_avatar_4"
        app:layout_constraintStart_toStartOf="@+id/iv_avatar_3"
        app:layout_constraintTop_toBottomOf="@+id/iv_avatar_3" />
</androidx.constraintlayout.widget.ConstraintLayout>